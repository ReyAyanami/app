<h3>
  Playlists
</h3>

<div class="right-align">
  <a {{action (toggle 'showCreateForm' this)}} class="btn-floating btn-large waves-effect waves-light red"><i
    class="material-icons">add</i></a>
</div>

{{!--{{#each model as |playlist|}}--}}
  {{!--{{#md-card title=playlist.title--}}
  {{!--titleClass="orange-text"--}}
  {{!--className='small'--}}
  {{!--image=playlist.thumbnail}}--}}

    {{!--{{#md-card-content}}--}}
      {{!--I am a very simple card. I am good at containing--}}
      {{!--small bits of information. I am convenient because--}}
      {{!--I require little markup to use effectively.--}}
    {{!--{{/md-card-content}}--}}

    {{!--{{#md-card-action}}--}}
    {{!--{{#link-to "cards"}}Link 1{{/link-to}}--}}
    {{!--{{#link-to "cards"}}Link 2{{/link-to}}--}}
    {{!--{{/md-card-action}}--}}

  {{!--{{/md-card}}--}}
{{!--{{/each}}--}}

{{#md-table content=model class='striped' as |row|}}
  {{#md-table-col row=row key='id' header='Title'}}
    {{row.title}}
  {{/md-table-col}}
  {{#md-table-col row=row key='name' header='Image'}}
    <img src={{row.thumbnail}} alt={{row.title}}>
    {{img}}
  {{/md-table-col}}
  {{#md-table-col row=row key='name' header='actions'}}
    {{md-btn class='teal white-text' text='delete'}}
  {{/md-table-col}}
{{/md-table}}

{{md-pagination min=1 current=page range=7}}

{{#if showCreateForm}}
  {{playlist-create
  cancel=(toggle-action 'showCreateForm' this)
  create=(action (queue (action 'create') (toggle 'showCreateForm' this)))
  }}
{{/if}}
{{outlet}}
